@model IEnumerable<CapaDominio.Entities.Prioridad>

@{
    ViewData["Title"] = "Lista de Prioridades";
    int i = 1;
}

<a asp-action="Create" class="btn btn-primary mb-3">Agregar prioridad</a>
<h1 class="mb-3">Prioridades</h1>

<div class="table-responsive shadow">
    <table class="table table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>
                    #
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Clase
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @item.Clase
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPrioridad" class="btn btn-warning">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Nombre" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
